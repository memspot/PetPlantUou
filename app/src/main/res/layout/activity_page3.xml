<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Page3">


    <ImageView
            android:layout_width="415dp"
            android:layout_height="741dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    />

    <ImageView
            android:layout_width="40dp"
            android:layout_height="46dp" app:srcCompat="@drawable/drop"
            android:id="@+id/imageView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.188" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/mf_progress_bar_azul"
            android:layout_marginRight="8dp"/>

    <ProgressBar
            android:progressDrawable="@drawable/progress_bar_azul"
            style="?android:attr/progressBarStyleHorizontal"

            android:id="@+id/mf_progress_bar_azul"

            android:layout_gravity="center_horizontal"
            android:layout_height="27dp" android:layout_width="119dp"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.224"
            android:max="100" android:progress="0"
            android:layout_marginBottom="264dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mf_progress_bar-amarelo" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

    <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp" app:srcCompat="@drawable/sunny"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/mf_progress_bar-amarelo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.188"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            app:layout_constraintStart_toEndOf="@+id/mf_progress_bar_azul" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.722"/>
    <ProgressBar
            android:progressDrawable="@drawable/progress_bar_amarelo"
            style="?android:attr/progressBarStyleHorizontal"

            android:id="@+id/mf_progress_bar-amarelo"

            android:layout_gravity="center_horizontal"
            android:layout_height="27dp" android:layout_width="119dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            android:max="100" android:progress="3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.207"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Índice de umidade"
            android:id="@+id/textView19" android:layout_weight="1"
            android:layout_width="131dp" android:layout_height="28dp"
            app:layout_constraintTop_toBottomOf="@+id/mf_progress_bar_azul" android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            app:fontFamily="sans-serif-black" android:textSize="14sp"/>
    <TextView
            android:text="Índice de raios UV"
            android:id="@+id/textView18" android:layout_weight="1" android:layout_height="34dp"
            android:layout_width="125dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mf_progress_bar-amarelo"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp"
            app:fontFamily="sans-serif-black"/>


    <ImageView
            android:layout_width="652dp"
            android:layout_height="356dp" app:srcCompat="@drawable/fundo2"
            android:id="@+id/imageView4"
            android:layout_marginBottom="376dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/recebeNome"
            android:layout_width="273dp"
            android:layout_height="77dp"
            android:layout_marginStart="32dp"
            android:shadowColor="#707070"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="@string/jogador"
            android:textColor="@android:color/white"
            android:textSize="55sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.081" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView11" app:fontFamily="@font/anton"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/recebePersonagemTexto"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="@string/personagem"
            android:shadowColor="#707070"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/recebeNome"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/imageView11"
            app:layout_constraintVertical_bias="1.0" app:fontFamily="@font/cabin"/>

    <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@android:color/darker_gray"
            android:id="@+id/oi"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="@android:color/holo_green_dark"
            app:allow_random_color="false"
            app:siShape="@drawable/ledi" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.139" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/recebeNome" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.928"/>
    <ImageView
            android:layout_width="192dp"
            android:layout_height="226dp" app:srcCompat="@drawable/suculenta"
            android:id="@+id/imageView11" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.832" app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.606"/>


    <Button
            android:layout_width="82dp"
            android:layout_height="73dp"
            android:id="@+id/dicasButton"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="@color/colorAccent2"
            android:background="@drawable/idea"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginEnd="92dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="92dp"
            app:layout_constraintHorizontal_bias="0.275" android:onClick="ClickDicas"/>
        <TextView
                android:text="Dicas"
                android:layout_width="36dp"
                android:layout_height="21dp" android:id="@+id/textView6" android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/dicasButton"
                android:layout_marginStart="96dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="96dp" android:layout_marginTop="16dp"
                app:fontFamily="sans-serif-black"/>

    <Button
            android:layout_width="73dp"
            android:layout_height="75dp"
            android:id="@+id/configButton"
            style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/black"
            android:background="@drawable/settings"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="76dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:onClick="ClickConfig"/>
    <TextView
            android:text="Configurações"
            android:layout_width="wrap_content"
            android:layout_height="26dp" android:id="@+id/textView7" android:layout_weight="1"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="60dp"
            app:fontFamily="sans-serif-black" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/configButton" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.991"/>

    <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:onClick="Click3"
            android:text="@string/trocar"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:typeface="normal"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"/>



</android.support.constraint.ConstraintLayout>
